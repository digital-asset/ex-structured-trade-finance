ARG sdk_vsn=0.13.40

FROM digitalasset/daml-sdk:${sdk_vsn}

WORKDIR /home/daml

COPY .daml/dist/StructuredTradeFinance.dar /home/daml/

# Need the root user to set appropriate ownership of the DAR file.
USER root
RUN chown daml StructuredTradeFinance.dar
USER daml

EXPOSE 6865

CMD ~/.daml/bin/daml sandbox -- --port 6865 --scenario DA.RefApps.StructuredTradeFinance.Main:setup StructuredTradeFinance.dar
